<div class="locations delete">
  <h2>Delete Location</h2>

  <%= form_for(:location, :url => {:action => 'destroy', :id => @location.id}) do |f| %>

    <p>Are you sure you want to permanently delete this location?</p>

    <p class="reference-name"><%= @location.name %></p>

    <div class="form-buttons">
      <%= submit_tag("Delete Location") %>
    </div>

  <% end %>
</div>
